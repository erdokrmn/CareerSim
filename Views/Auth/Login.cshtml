@model CareerSim.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="~/login/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/login/css/main.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">

                <!-- GÖRSEL KOLONU -->
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/login/images/img-01.png" alt="IMG">
                </div>

                <!-- FORM -->
                <form asp-action="Login" method="post" class="login100-form validate-form">
                    <span class="login100-form-title p-b-33">Giriş Yap</span>

                    <div class="wrap-input100 validate-input">
                        <input asp-for="UserName" class="input100" placeholder="Kullanıcı Adı" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input asp-for="Password" class="input100" type="password" placeholder="Şifre" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check m-t-10 m-b-10">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                    </div>
                    <div class="text-center p-t-10">
                        <a asp-action="ForgotPassword" class="txt2">
                            Şifremi Unuttum?
                        </a>
                    </div>

                    <div class="container-login100-form-btn m-t-20">
                        <button class="login100-form-btn" type="submit">
                            Giriş Yap
                        </button>
                    </div>

                    <div class="text-center p-t-45 p-b-4">
                        <span>
                            Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a>
                        </span>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <script src="~/login/js/main.js"></script>
</body>
</html>
